    <rules>
        <fullName>Auto response W2C Klinc DE</fullName>
        <actions>
            <name>Auto_response_W2C_Klinc_DE</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>KLINC: Sends auto response email to Web2Case Germany, triggered when email provided in the form and the customer&apos;s email associated to the case are different.</description>
        <formula>AND(ISPICKVAL(Origin, &quot;Web&quot;),SourceCountry__c = &quot;Germany&quot;,Owner:Queue.QueueName = &quot;Customer Care - Germany&quot;,
 !ISBLANK(ContactId ) , SuppliedEmail != Contact.Email  
,  RecordType.DeveloperName = &apos;Enquiry&apos;)</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Auto response W2C Klinc ES</fullName>
