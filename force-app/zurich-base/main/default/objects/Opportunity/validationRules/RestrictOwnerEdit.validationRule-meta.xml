<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RestrictOwnerEdit</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 $Profile.Name = &apos;Ventas User&apos;,
Owner.Profile.Name &lt;&gt; &apos;Agente Ventas&apos;,
    ISCHANGED(OwnerId)
)</errorConditionFormula>
    <errorMessage>[VR Oferta] Cambio de propietario no permitido</errorMessage>
</ValidationRule>
