<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ActivityDateRuleCantBeLessThanToday</fullName>
    <active>false</active>
    <errorConditionFormula>(ISNEW() || ISCHANGED(ActivityDate)) &amp;&amp; RecordType.DeveloperName = &quot;Activity&quot; &amp;&amp;  ActivityDate &lt; TODAY() &amp;&amp; $Profile.Id  &lt;&gt; &apos;00e5I000000Hu97&apos; &amp;&amp; $Profile.Id &lt;&gt; &apos;00e5I000000UPld&apos;&amp;&amp; $Profile.Id &lt;&gt; &apos;00e5I000000QeQS&apos;</errorConditionFormula>
    <errorMessage>[VR Tarea] Una actividad no puede tener una fecha de vencimiento menor que la fecha actual</errorMessage>
</ValidationRule>
