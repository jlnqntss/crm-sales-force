<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Notify_To_Validation_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND(Send_Email__c == true,!REGEX(Notify_To__c, &quot;^([\\w+-.%]+@[\\w-.]+\\.[A-Za-z]{2,4},?)+$&quot;))</errorConditionFormula>
    <errorDisplayField>Notify_To__c</errorDisplayField>
    <errorMessage>Email addresses separated by comma</errorMessage>
</ValidationRule>
