<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>StatusRulePendingOnlyGoToAnsweredOrClose</fullName>
    <active>true</active>
    <description>[VR Caso] Caso en estado PENDIENTE sólo puede pasar a RESPONDIDO o CERRADO</description>
    <errorConditionFormula>ISCHANGED(Status) &amp;&amp; ISPICKVAL(PRIORVALUE(Status),&quot;Pendiente&quot;) &amp;&amp; NOT(ISPICKVAL(Status,&quot;Respondido&quot;) || ISPICKVAL(Status,&quot;Cerrado&quot;))</errorConditionFormula>
    <errorDisplayField>Status</errorDisplayField>
    <errorMessage>[VR Caso] Caso en estado PENDIENTE sólo puede pasar a RESPONDIDO o CERRADO</errorMessage>
</ValidationRule>
