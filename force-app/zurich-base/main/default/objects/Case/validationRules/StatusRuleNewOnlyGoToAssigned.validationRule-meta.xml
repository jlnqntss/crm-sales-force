<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>StatusRuleNewOnlyGoToAssigned</fullName>
    <active>true</active>
    <description>[VR Caso] Caso en estado NUEVO sólo puede pasar a ASIGNADO</description>
    <errorConditionFormula>RecordType.DeveloperName == &quot;OCSInquiry&quot; &amp;&amp; 
ISCHANGED(Status) &amp;&amp; ISPICKVAL(PRIORVALUE(Status),&quot;Nuevo&quot;) &amp;&amp; AND(NOT(ISPICKVAL(Status,&quot;Asignado&quot;)),NOT(ISPICKVAL(Status,&quot;Transferido&quot;)))</errorConditionFormula>
    <errorDisplayField>Status</errorDisplayField>
    <errorMessage>[VR Caso] Caso en estado NUEVO sólo puede pasar a ASIGNADO</errorMessage>
</ValidationRule>
