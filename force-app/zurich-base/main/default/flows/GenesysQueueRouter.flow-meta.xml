    <decisions>
        <name>Check_Note_info</name>
        <label>Check Note info</label>
        <locationX>270</locationX>
        <locationY>518</locationY>
        <defaultConnector>
            <targetReference>loopQueues</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Doesn&apos;t contain</defaultConnectorLabel>
        <rules>
            <name>ContainsNotaINFO</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>loopQueues.RouteType__c</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>Nota Info</stringValue>
                </rightValue>
