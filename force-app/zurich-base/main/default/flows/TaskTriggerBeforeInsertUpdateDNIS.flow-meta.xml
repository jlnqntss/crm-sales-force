    <assignments>
        <description>poner en DNIS Phone el valor de DNIS</description>
        <name>SetDNISPhone</name>
        <label>Asignar DNIS Phone</label>
        <locationX>850</locationX>
        <locationY>313</locationY>
        <assignmentItems>
            <assignToReference>$Record.DNISPhone__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>$Record.DNIS__c</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <assignments>
        <description>Fija el DNIS Phone a un teléfono a mano</description>
        <name>SetDNISPhoneWithPlus</name>
        <label>Asignar DNIS Phone con +</label>
        <locationX>1033</locationX>
        <locationY>312</locationY>
        <assignmentItems>
            <assignToReference>$Record.DNIS__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>+{!$Record.DNIS__c}</stringValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>SetDNISPhone</targetReference>
        </connector>
    </assignments>
    <constants>
        <name>plus</name>
        <dataType>String</dataType>
        <value>
            <stringValue>+</stringValue>
        </value>
    </constants>
    <decisions>
        <description>el campo dnis ha cambiado y no es un correo electrónico</description>
        <name>DNISisPhone</name>
        <label>¿Ha cambiado DNIS a un teléfono?</label>
        <locationX>609</locationX>
        <locationY>314</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Si</name>
            <conditionLogic>1 AND 3 AND (NOT 2)</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.DNIS__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$Record.DNIS__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.DNIS__c</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>@</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.DNIS__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>SetDNISPhone</targetReference>
            </connector>
            <label>Si</label>
        </rules>
    </decisions>
    <decisions>
        <name>DNISisWHATSAPP</name>
        <label>¿Tarea es de Whatsapp?</label>
        <locationX>608</locationX>
        <locationY>95</locationY>
        <defaultConnector>
            <targetReference>DNISisPhone</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>SiWhatsapp</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Subtype__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>WhatsApp</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>DNIStartsWithPLUS</targetReference>
            </connector>
            <label>Si Whatsapp</label>
        </rules>
    </decisions>
    <decisions>
        <name>DNIStartsWithPLUS</name>
        <label>DNIS comienza por +</label>
        <locationX>842</locationX>
        <locationY>97</locationY>
        <defaultConnector>
            <targetReference>SetDNISPhoneWithPlus</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>StartsWithPlus</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.DNIS__c</leftValueReference>
                <operator>StartsWith</operator>
                <rightValue>
                    <elementReference>plus</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>SetDNISPhone</targetReference>
            </connector>
            <label>Si</label>
        </rules>
    </decisions>
    <description>Rellena DNIS Phone con lo que tenga DNIS si no es un correo electrónico</description>
