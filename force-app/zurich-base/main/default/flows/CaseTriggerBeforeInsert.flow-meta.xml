<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <assignments>
        <description>Si hay varios emails iguales registrados en salesforce, no se puede saber a qué cuenta hay que relacionarla, así que habrá que dejarla vacía</description>
        <name>NumberOfEmails</name>
        <label>Número de emails</label>
        <locationX>640</locationX>
        <locationY>104</locationY>
        <assignmentItems>
            <assignToReference>n</assignToReference>
            <operator>AssignCount</operator>
            <value>
                <elementReference>SearchContactPointEmail</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>MoreThanOneEmail</targetReference>
        </connector>
    </assignments>
    <assignments>
        <description>rellena el caso con el account y contact del contact point email coincidente</description>
        <name>SetAccountContact</name>
        <label>Poner Account y Contact</label>
        <locationX>767</locationX>
        <locationY>556</locationY>
        <assignmentItems>
            <assignToReference>$Record.AccountId</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>GetAccount.Id</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>$Record.ContactId</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>GetAccount.PersonContact.Id</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <decisions>
        <description>si hay más de un email, no hace nada porque no se sabe a cuál asignar</description>
        <name>MoreThanOneEmail</name>
        <label>¿Hay más de 1 email coincidente?</label>
        <locationX>632</locationX>
        <locationY>302</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>No</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>n</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <numberValue>1.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>RunCollection</targetReference>
            </connector>
            <label>No</label>
        </rules>
    </decisions>
    <decisions>
        <description>Si parent Id está relleno con un Individual o está a null o vacío, no se podrá buscar la cuenta</description>
        <name>ParentIdIsAccount</name>
        <label>¿ParentId es una cuenta?</label>
        <locationX>300</locationX>
        <locationY>565</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>RunCollection.ParentId</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>RunCollection.ParentId</leftValueReference>
                <operator>StartsWith</operator>
                <rightValue>
                    <stringValue>001</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>GetAccount</targetReference>
            </connector>
            <label>Si</label>
        </rules>
    </decisions>
    <description>rellena el account y contact según coincida el web email con un contact point email</description>
    <interviewLabel>Case Trigger - Before insert {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Case Trigger - Before insert</label>
    <loops>
        <description>la colección solo debería tener 1 elemento</description>
        <name>RunCollection</name>
        <label>Recorrer Colección</label>
        <locationX>307</locationX>
        <locationY>372</locationY>
        <collectionReference>SearchContactPointEmail</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>ParentIdIsAccount</targetReference>
        </nextValueConnector>
    </loops>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <description>El ParentId al poder ser tanto Account como Individual, no permite acceder a los campos por medio de la relación</description>
        <name>GetAccount</name>
        <label>Conseguir Cuenta</label>
        <locationX>510</locationX>
        <locationY>568</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>SetAccountContact</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>RunCollection.ParentId</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>Account</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordLookups>
        <description>busca  un contact point email que coincida con el web email relleno por el email-to-case</description>
        <name>SearchContactPointEmail</name>
        <label>Buscar Contact Point Email</label>
        <locationX>481</locationX>
        <locationY>69</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>NumberOfEmails</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>EmailAddress</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.SuppliedEmail</elementReference>
            </value>
        </filters>
        <filters>
            <field>EmailAddress</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <getFirstRecordOnly>false</getFirstRecordOnly>
        <object>ContactPointEmail</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>SearchContactPointEmail</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>SuppliedEmail</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>Case</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
