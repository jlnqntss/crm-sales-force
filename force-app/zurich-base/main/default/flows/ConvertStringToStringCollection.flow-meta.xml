    <description>Recoge una cadena de caracteres y un separador y devuelve una lista con los elementos de la cadena divididos por dicho separador.</description>
    <environments>Default</environments>
    <formulas>
        <description>Calcula la primera parte del texto a extraer</description>
        <name>forT_CalculateFirstText</name>
        <dataType>String</dataType>
        <expression>trim(LEFT({!varT_RemainingText}, FIND({!varT_Separator}, {!varT_RemainingText})-1))</expression>
    </formulas>
    <formulas>
        <description>Calcula el texto después de cada extracción.</description>
        <name>forT_ReCalculateText</name>
        <dataType>String</dataType>
        <expression>Trim(right({!varT_RemainingText}, len({!varT_RemainingText})-FIND({!varT_Separator}, {!varT_RemainingText})))</expression>
    </formulas>
