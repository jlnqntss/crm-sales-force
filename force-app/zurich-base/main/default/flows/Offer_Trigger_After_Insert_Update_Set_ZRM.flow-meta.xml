    <decisions>
        <description>Si se cumple la condición se marca a true el campo IntermediaryEdit__c</description>
        <name>Is_Business_Code_Null</name>
        <label>Is Business Code Null?</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <defaultConnector>
            <targetReference>Get_Scope_Metadata</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.BusinessCode__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_ZRM_True</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
