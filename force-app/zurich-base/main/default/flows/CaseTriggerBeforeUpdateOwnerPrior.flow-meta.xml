    <decisions>
        <description>Comprobamos si el Caso que lanza el flow es de tipo OCSInquiry, USPInquiry o ZDAInquiry. SÃ³lo en esos casos se actualiza el prior</description>
        <name>OcsUspDecision</name>
        <label>OCS/USP</label>
        <locationX>314</locationX>
        <locationY>287</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>OcsUspOutcome</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>OCSInquiry</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>USPInquiry</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>SetPriorFieldsAssignment</targetReference>
            </connector>
            <label>OCS/USP</label>
        </rules>
        <rules>
            <name>ZdaOutcome</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>ZDAInquiry</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record__Prior.OwnerIdPrior__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>SetPriorFieldForZdaAssignment</targetReference>
            </connector>
            <label>ZDA</label>
        </rules>
    </decisions>
