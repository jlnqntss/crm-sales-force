<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <description>SDM: calcula la fecha de inicio del plan comercial.</description>
    <formulas>
        <description>Calcula si el mes seleccionado ya ha pasa, para saber si el plan comercial hace referencia a este a√±o o el siguiente.</description>
        <name>NextYear</name>
        <dataType>Number</dataType>
        <expression>IF
(
  MONTH( DATEVALUE( {!$Record.CreatedDate} ) ) &gt; VALUE(TEXT({!$Record.Month__c})),
  1,
  0
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <description>Fecha de inicio del mes selccionado</description>
        <name>StartDate</name>
        <dataType>Date</dataType>
        <expression>DATEVALUE
(
  TEXT
  (
    Year
    ( 
        {!$Record.EndDate__c}
    )
  ) 
  +
  &quot;-01-01&quot;
)</expression>
    </formulas>
    <interviewLabel>SDM - Start date {!$Flow.CurrentDateTime}</interviewLabel>
    <label>SDM - PC Start date</label>
