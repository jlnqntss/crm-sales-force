    <decisions>
        <description>Se comprueba tanto si la cuenta relacionada con el contacto como la cuenta relacionada, ambos casos relacionados con el evento, son de tipo Mediador o Agrupación Mediador.</description>
        <name>AreAccountsIntermediaryOrIntermediaryGroupType</name>
        <label>¿Las cuentas son de tipo Mediador o Agrupación Mediador?</label>
        <locationX>380</locationX>
        <locationY>611</locationY>
        <defaultConnector>
            <targetReference>Actualizar_Record_Type</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Resultado predeterminado</defaultConnectorLabel>
        <rules>
            <name>SomeAreIntermediaryOrIntermediaryGroupTypeOutcome</name>
            <conditionLogic>(1 OR 2 OR 3 OR 4) AND (5 OR 6 OR 7 OR 8)</conditionLogic>
            <conditions>
                <leftValueReference>GetRelatedAccountAction.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Intermediary_RecordType</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>GetRelatedContactAction.Account.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Intermediary_RecordType</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>GetRelatedAccountAction.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>AgrupacionMediador_RecordType</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>GetRelatedContactAction.Account.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>AgrupacionMediador_RecordType</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>GetRelatedAccountAction.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>001</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>GetRelatedAccountAction.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>002</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>GetRelatedContactAction.Account.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>001</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>GetRelatedContactAction.Account.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>002</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Las_cuentas_son_de_tipo_Agrupacion</targetReference>
            </connector>
            <label>Alguna es de tipo Mediador o Agrupación Mediador</label>
        </rules>
    </decisions>
