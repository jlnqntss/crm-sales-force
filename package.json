{
  "name": "zurich-salesforce",
  "author": "NTS",
  "version": "1.0.0",
  "scripts": {
    "sync-code:validate": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command \"sf sfpowerkit source profile reconcile --targetusername (sf org display --json | ConvertFrom-Json).result.username ; sf project deploy start --dry-run --source-dir force-app --wait 120 --test-level RunLocalTests ; git reset --hard\"",
    "lint": "npm run lint:lwc",
    "lint:lwc": "eslint --no-error-on-unmatched-pattern force-app/**/main/default/lwc",
    "postinstall": "sf update && (echo y | sf plugins install sfpowerkit --force)",
    "install:extensions": "type config/vscode-extensions.list | code --install-extension -",
    "test:lwc": "lwc-jest -- --passWithNoTests",
    "test:org": "sf apex run test --code-coverage --verbose --detailed-coverage --result-format junit --wait 120 --output-dir ./tests/apex",
    "push:source": "sf project deploy start --forceoverwrite",
    "deploy:source": "sf project deploy start --source-dir=force-app",
    "deploy:validate": "node scripts/source/unit-deploy-validation.js",
    "deploy:dir": "node scripts/source/unit-deploy-to-dir.js",
    "pull:source": "sf project retrieve start --forceoverwrite",
    "retrieve:": "sf project retrieve start --source-dir=force-app",
    "pull:profiles": "sf project retrieve start --forceoverwrite && sf sfpowerkit source profile reconcile --sourceonly",
    "retrieve:profiles:all": "sf sfpowerkit source profile retrieve",
    "retrieve:email-templates": "node scripts/source/retrieve-templates.js",
    "docs:update": "node scripts/source/update-docs.js",
    "release:create": "node scripts/source/create-release.js",
    "release:candidate": "node scripts/source/increment-release.js",
    "release:finish": "node scripts/source/finish-release.js",
    "release:changelog": "node scripts/source/changelog.js",
    "test:unit": "sfdx-lwc-jest --skipApiVersionCheck",
    "test:unit:debug": "sfdx-lwc-jest --debug --skipApiVersionCheck",
    "test:unit:watch": "sfdx-lwc-jest --watch --skipApiVersionCheck",
    "release:authenticate": "node scripts/source/authenticate.js",
    "release:scan": "node scripts/source/scan",
    "release:test:lwc": "sfdx-lwc-jest --skipApiVersionCheck --coverage",
    "release:test:apex": "node scripts/source/test-apex.js",
    "release:validate": "node scripts/source/deploy.js --check",
    "release:deploy": "node scripts/source/deploy.js",
    "release:tag:version": "node scripts/source/tag-version.js",
    "release:start": "node scripts/source/create-release.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && node scripts/source/apex-formatter.js"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/lint": "^11.0.0",
    "@salesforce/eslint-config-lwc": "^0.8.0",
    "@salesforce/sfdx-lwc-jest": "^1.1.2",
    "eslint": "^7.15.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.6",
    "merge-dirs": "^0.2.1",
    "mustache": "^4.1.0",
    "node-fetch": "^2.6.1",
    "node-find-folder": "^0.1.32",
    "node-merge": "^0.1.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0"
  },
  "dependencies": {
    "text-cleaner": "^1.2.1"
  }
}
